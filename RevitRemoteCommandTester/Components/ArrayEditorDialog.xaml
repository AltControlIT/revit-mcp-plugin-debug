<Window x:Class="RevitRemoteCommandTester.Components.ArrayEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevitRemoteCommandTester.Components"
        mc:Ignorable="d"
        Title="Edit Array" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        FontFamily="Segoe UI">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/RevitRemoteCommandTester;component/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <local:ItemIndexConverter x:Key="IndexConverter"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Editing Array Parameter:" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <TextBlock x:Name="ParameterNameText" FontSize="18" Margin="0,0,0,16"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 表头 -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Index" FontWeight="SemiBold" Margin="4,0" Width="40"/>
                    <TextBlock Grid.Column="1" Text="Value" FontWeight="SemiBold" Margin="4,0"/>
                </Grid>

                <!-- 数组项列表 -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ArrayItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContentPresenter}}, Converter={StaticResource IndexConverter}}"
                                               VerticalAlignment="Center" Margin="4,0"/>

                                    <TextBox Grid.Column="1" Text="{Binding Value}" Margin="4,0,8,0" Padding="6,4"/>

                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Style="{StaticResource IconButtonStyle}" Margin="0,0,4,0"
                                                Click="MoveItemUp_Click" ToolTip="Move Up"
                                                Tag="{Binding}">
                                            <Path Data="M7,15L12,10L17,15H7Z" Fill="#757575" Width="12" Height="12"/>
                                        </Button>

                                        <Button Style="{StaticResource IconButtonStyle}" Margin="0,0,4,0"
                                                Click="MoveItemDown_Click" ToolTip="Move Down"
                                                Tag="{Binding}">
                                            <Path Data="M7,10L12,15L17,10H7Z" Fill="#757575" Width="12" Height="12"/>
                                        </Button>

                                        <Button Style="{StaticResource IconButtonStyle}"
                                                Click="RemoveItem_Click" ToolTip="Remove Item"
                                                Tag="{Binding}">
                                            <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" 
                                                  Fill="#F44336" Width="14" Height="14"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- 添加数组项按钮 -->
                <Button Grid.Row="2" Content="Add Item" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        HorizontalAlignment="Left" Margin="0,8,0,0"
                        Click="AddItem_Click"/>
            </Grid>
        </Border>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button Content="OK" Style="{StaticResource PrimaryButtonStyle}" Click="OK_Click"/>
        </StackPanel>
    </Grid>
</Window>
